    <!-- 登录表单 -->
    <div class="login-form" id="login">
        <h3>用户登录</h3>
        <div class="form-group">
            <label for="username">账号</label>
            <input type="text" id="username" placeholder="请输入账号">
            <div class="error" id="usernameError">账号不能为空（至少3位）</div>
        </div>
        <div class="form-group">
            <label for="password">密码</label>
            <input type="password" id="password" placeholder="请输入密码">
            <div class="error" id="passwordError">密码不能为空（至少6位）</div>
        </div>
        <button class="login-btn" onclick="checkLogin()">登录</button>
    </div>

    <!-- 数据表格（增删改查） -->
    <div class="data-table" id="data">
        <h3>信息管理列表</h3>
        <div class="table-controls">
            <input type="text" id="searchInput" placeholder="搜索名称...">
            <button onclick="searchData()">搜索</button>
            <button onclick="showAddModal()">新增</button>
        </div>
        <table>
            <thead>
                <tr>
                    <<th>ID</</th>
                    <<th>名称</</th>
                    <<th>描述</</th>
                    <<th>操作</</th>
                </tr>
            </thead>
            <tbody id="tableBody">
                <!-- 数据由JS动态生成 -->
            </tbody>
        </table>
